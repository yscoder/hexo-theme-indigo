<% if(post.type == 'tags') { %>
  <%- partial('post/tags') %>
<% } else { %>
  <article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemprop="blogPost">
    <% if(index) { %>
      <%- partial('post/title') %>
      <div class="post-meat flex-row">
        <div class="flex-col"><%- partial('post/tag') %></div>
        <%- partial('post/date', {date_format: config.date_format}) %>
      </div>
      <div class="post-content" id="post-content" itemprop="postContent" >
        <% if (post.excerpt){ %>
          <%- post.excerpt %>
        <% } else { %>
          <%- post.content %>
        <% } %>
      </div>
      <div class="post-footer clearfix">
        <a href="<%- url_for(post.path) %>" class="post-more waves-effect waves-button waves-light">MORE</a>
      </div>
    <% } else { %>
      <div class="post-meat flex-row">
        <div class="flex-col"><%- partial('post/tag') %></div>
      </div>
      <div class="post-body">

        <aside class="post-widget" id="post-widget">

          <% if(theme.share){ %>
          <%- partial('post/share', {
                className: 'post-share'
            }) %>
          <% } %>

          <% if(theme.toc){ %>
          <nav class="post-toc-wrap" id="post-toc">
            <%- toc(post.content, {
                class: 'post-toc',
                list_number: theme.toc.list_number
                }) %>
          </nav>
          <% } %>
        </aside>

        <div class="post-main">

            <div class="post-content" id="post-content" itemprop="postContent"><%- post.content %></div>
            <div class="post-share">
              <p>
                <span>转载请注明本文地址：</span>
                <a href="<%- url_for(post.path) %>" target="_blank" rel="external" id="shareLink"><%- url_for(post.path) %></a>
              </p>
            </div>
            <%- partial('post/nav') %>

            <%- partial('post/comment') %>

        </div>

      </div>

    <% } %>
  <script type="text/javascript">
    var $shareLink = document.getElementById('shareLink')
    shareLink.text = window.location.origin + shareLink.text
  </script>
  </article>

<% } %>
